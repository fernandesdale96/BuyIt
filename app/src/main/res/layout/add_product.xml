<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="40dp">


        <!-- Input Name -->


            <EditText
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:id="@+id/inputName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="10dip"
                android:hint="Product Name"
                android:inputType="textCapWords"/>



        <!-- Input Price -->



            <EditText
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:id="@+id/inputPrice"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="10dip"
                android:hint="Price"
                android:textSize="17dip"
                android:inputType="numberDecimal"/>



        <!-- Input description -->


            <EditText
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:id="@+id/inputDesc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lines="4"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="10dip"
                android:hint="Description"
                android:textSize="17dip"
                android:inputType="text"/>





            <EditText
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:id="@+id/inputLocation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="10dip"
                android:hint="Location"
                android:textSize="17dip"
                android:inputType="text"/>





            <EditText
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:id="@+id/inputDistance"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="10dip"
                android:hint="Distance"
                android:textSize="17dip"
                android:inputType="numberDecimal"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView android:id="@+id/imageView1" android:layout_height="wrap_content" android:src="@drawable/ic_action_search" android:layout_width="wrap_content" ></ImageView>


            <Button android:id="@+id/btnCamera"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="25dp"
                android:text="Picture"/>

        </RelativeLayout>

        <!-- Button Create Product -->

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnCreateProduct"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:background="@color/colorPrimaryDark"
            android:padding="12dp"
            android:text="Add Product" />
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>